<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <th>名前</th>
      <td>(姓)</td>
      <td>
        <div class="field">
          <%= f.text_field :last_name %>
        </div>
      </td>
      <td>(名)</td>
      <td>
        <div class="field">
          <%= f.text_field :first_name %>
        </div>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>(セイ)</td>
      <td>
        <div class="field">
          <%= f.text_field :last_name_kana %>
        </div>
      </td>
      <td>(メイ)</td>
      <td>
        <div class="field">
          <%= f.text_field :first_name_kana %>
        </div>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td></td>
      <td>
        <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </td>
      <td></td><td></td>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td></td>
      <td>
        <div class="field">
          <%= f.text_field :postal_code %>
        </div>
      </td>
      <td></td><td></td>
    </tr>
    <tr>
      <th>住所</th>
      <td></td>
      <td colspan="3">
        <div class="field">
          <%= f.text_field :address %>
        </div>
      </td>
    </tr>
    <tr>
      <th>電話番号(ハイフンなし)</th>
      <td></td>
      <td>
        <div class="field">
          <%= f.text_field :telephone_number %>
        </div>
      </td>
      <td></td><td></td>
    </tr>
    <tr>
      <th>パスワード(8文字以上)</th>
      <td></td>
      <td>
        <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      </td>
      <td></td><td></td>
    </tr>
    <tr>
      <th>パスワード(確認用)</th>
      <td></td>
      <td>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <th></th><td></td>
      <td>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      </td>
      <td></td><td></td>
    </tr>

  </table>
  <% end %>

  <%= render "devise/shared/links" %>

