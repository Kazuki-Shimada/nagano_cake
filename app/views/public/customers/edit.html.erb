<div class="container text-center">
  <h2 class="bg-light mx-5 w-50">会員情報編集</h2>
  <%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>
    <table>
      <tr>
        <th>氏名</th>
        <td>
          <div class="field">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          <div class="field">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td>
          <div class="field">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </td>
        <td></td>
      </tr>
      <tr>
        <th>住所</th>
        <td colspan="2">
          <div class="field">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td>
          <div class="field">
            <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
        </td>
        <td></td>
      <tr>
        <th>メールアドレス</th>
        <td>
          <div class="field">
          <%= f.email_field :email, class: "form-control" %>
          </div>
        </td>
        <td></td>
      </tr>
      <tr>
        <th></th>
        <td>
          <div class="actions">
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        </td>
        <td>
          <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>