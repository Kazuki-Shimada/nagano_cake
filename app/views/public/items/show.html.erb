  <%= image_tag @item.get_image(300, 200) %>
</div>
<div class="container text-center">
  <h3><%= @item.name %></h3>
  <%= @item.introduction %>
  <div class="row align-items-end　text-center">
    ¥<%= (@item.price* 1.1).floor %>
    <p>(税込)</p>
  </div>
  <%= f.hidden_field :name, value => "@item.name" %>


</div>

