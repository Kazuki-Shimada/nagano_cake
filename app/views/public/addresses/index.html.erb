<h2>配送先登録/一覧</h2>
<%= form_with model: @address do |f| %>
  <table>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td>
        <%= f.text_field :postal_code %>
      </td>
      <td></td><td></td>
    </tr>
    <tr>
      <th>住所</th>
      <td colspan="2">
        <%= f.text_field :address %>
      </td>
      <td></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td>
        <%= f.text_field :name %>
      </td>
      <td></td>
      <td>
        <%= f.submit "新規登録" %>
      </td>
    </tr>
  </table>
<% end %>
<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <% @addresses each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_public_address_path(address) %>
        <%= link_to "削除する", public_address_path(address), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>
