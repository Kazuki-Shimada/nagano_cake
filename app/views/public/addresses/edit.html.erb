<div class="container text-center">
  <h2 class="bg-light mx-5 w-50">配送先編集</h2>
  <%= form_with model: @address do |f| %>
    <table class="table table-borderless">
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td>
          <%= f.text_field :postal_code %>
        </td>
        <td></td><td></td>
      </tr>
      <tr>
        <th>住所</th>
        <td colspan="2">
          <%= f.text_field :address %>
        </td>
        <td></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td>
          <%= f.text_field :name %>
        </td>
        <td></td>
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </tr>
    </table>
  <% end %>
</div>