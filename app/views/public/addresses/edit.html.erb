<h2>配送先編集</h2>
<%= form_with model: @address do |f| %>
  <table>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td>
        <%= f.text_field :postal_code %>
      </td><td></td><td></td>
    </tr>
    <tr>
      <th>住所</th>
      <td colspan="2">
        <%= f.text_field :address %>
      </td><td></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td>
        <%= f.text_field :name %>
      </td><td></td>
      <%= submit "変更内容を保存" %>
    </tr>
  </table>
<% end %>