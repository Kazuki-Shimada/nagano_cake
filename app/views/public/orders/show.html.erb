<div class="container text-center">
  <h2 class="bg-light mx-5 w-50">注文履歴詳細</h2>
  <h2>注文情報</h2>
  <table class="table table-bordered">
    <tr>
      <th class="bg-light">注文日</th>
      <td><%= @order.created_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th class="bg-light">配送先</th>
      <td>〒<%= @order.postal_code %></br>
      <%= @order.address %></br>
      <%= @order.name %></td>
    </tr>
    <tr>
      <th class="bg-light">支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th class="bg-light">ステータス</th>
      <td><%= @order.order_status_i18n %></td>
    </tr>
  </table>
  <h2>請求情報</h2>
  <table class="table table-bordered">
    <tr>
      <th>商品合計</th>
      <td><%= @order.billing_amount %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td>800</td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.billing_amount + 800 %></td>
    </tr>
  </table>
  <h2>注文内容</h2>
  <table class="table table-bordered">
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price * order_detail.amount %></td>
      </tr>
    <% end %>
  </table>
</div>