<h2 class="bg-light mx-5 w-25">商品詳細</h2>
<div class="mx-5">
  <%= image_tag @item.get_image(300, 200) %>
</div>
<div class="container text-center">
  <table class="table table-borderless mt-5">
    <tr>
      <th>商品名</th>
      <div class="text-left">
        <td>
          <%= @item.name %>
        </td>
      </div>
    </tr>
    <tr>
      <th>商品説明</th>
      <td>
        <%= @item.introduction %>
      </td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td>
        <%= @item.genre.name %>
      </td>
    </tr>
    <tr>
      <th>税込価格(税抜き価格)</th>
      <td>
        <%= (@item.price* 1.1).floor %>(<%= @item.price %>)
      </td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td>
        <%= @item.is_active ? '販売中' : '販売停止中' %>
      </td>
    </tr>
  </table>
  <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
</div>

