<h2>商品新規登録</h2>
<%= form_with model: @item, url:new_admin_item_path do |f| %>
  <table>
    <tr>
      <th>商品画像</th>
      <td>
        <%= f.file_field :item_image, accept:'image/*' %>
      </td>
    </tr>
    <tr>
      <th>商品名</th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td>
        <%= f.text_field :introduction %>
      </td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td>
        <%= f.collection_check_boxes(:genre, Genre.all, :id, :name) do |genre| %>
          <%= genre.label do %>
            <%= genre.check_box %>
            <%= genre.text %>
          <% end %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td>
        <%= f.text_field :price %>円
      </td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td></td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= f.submit "新規登録" %>
      </td>
    </tr>
  </table>
<% end %>

